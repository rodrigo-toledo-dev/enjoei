<p id="notice"><%= notice %></p>

<h1>Caixa de mensagens</h1>

<p class="actions">
  <%= link_to 'Escrever mensagem', new_message_path, class: "btn btn-primary"  %>
  <%= link_to 'Remover todas', archive_all_messages_path, class: "btn btn-danger js-archive-all-messages"  %>
</p>

<table class="table">
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td class="message--<%= message.state %>">
          <%= link_to message.title, message %>
        </td>
        <td>
          <%= link_to 'Remover', archive_message_url(message), class: 'js-archive-message' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

